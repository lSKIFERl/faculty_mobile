<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmployeeTimeFixation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryVariant">@color/orange_main_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_second_variant</item>
        <item name="colorSecondaryVariant">@color/orange_second</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EmployeeTimeFixation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.EmployeeTimeFixation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EmployeeTimeFixation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="AdditionalInfo" parent="Theme.EmployeeTimeFixation">
        <item name="android:background">@drawable/bg_rounded_view</item>
        <item name="android:backgroundTint">@color/orange_second</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Cell" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>